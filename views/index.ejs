<% include partials/header %>




<div class="container">
<header class="jumbotron">
<div class="container">
<h1>This is the campgrounds page!</h1>
<p> Viewer our hand-picked campgrounds from all over the world!</p>
<p>
<a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground</a>
</p>
</div>
</header>


<div class="row">
    <div class="col-lg-12">
        <h3> Our Most Popular Campgrounds!</h3>
    </div>
</div>

<div class="row" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach((campgrounds)=>{ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campgrounds.image %>">
                <div class="caption text-center">
                    <h4><%= campgrounds.name %></h4>
                </div>
            </div>
        </div>
        <% }); %>
</div>
    

</div>
<% include partials/footer %>